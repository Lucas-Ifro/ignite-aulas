{
  "compilerOptions": {
 
    "lib": ["dom", "DOM.Iterable", "ESNext"],                                  
    "jsx": "react-jsx", 
    "allowJs": true,                                                            
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true, 
    "noEmit": true,                    
    "checkJs": true,                                  
    "allowSyntheticDefaultImports": true,             
    "esModuleInterop": true,                             
    "strict": true,                                      
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,                                 
  },
  "include": ["src"]
}
